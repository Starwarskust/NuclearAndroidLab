<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityA">

    <LinearLayout
        android:id="@+id/main_layout_land"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_activityA_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:text="@string/activityA_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:background="@drawable/meme_land">

            <Button
                style="@style/GeneralButton"
                android:id="@+id/button_open_activityB"
                android:layout_marginTop="100sp"
                android:layout_marginStart="50sp"
                android:background="@android:color/holo_red_dark"
                android:text="@string/open_activityB"
                android:textColor="@android:color/white" />

            <Button
                style="@style/GeneralButton"
                android:id="@+id/button_open_fragmentB"
                android:layout_marginTop="60sp"
                android:layout_marginStart="10sp"
                android:background="@android:color/holo_red_dark"
                android:text="@string/open_fragmentB"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_layout_land"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_fragmentBA"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_fragmentBB"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</FrameLayout>